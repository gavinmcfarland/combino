{
	"name": "@combino/plugin-edge",
	"version": "1.0.1",
	"type": "module",
	"description": "Edge.js template engine plugin for Combino",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"build:watch": "tsc --watch",
		"lint": "eslint src/**/*.ts",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prepublishOnly": "npm run build"
	},
	"keywords": [
		"combino",
		"plugin",
		"edge",
		"template",
		"scaffolding"
	],
	"author": "",
	"license": "MIT",
	"peerDependencies": {
		"combino": "^1.0.0"
	},
	"dependencies": {
		"edge.js": "^6.2.1"
	},
	"devDependencies": {
		"@types/node": "^20.17.55",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"eslint": "^8.0.0",
		"prettier": "^3.5.3",
		"typescript": "^5.0.0"
	}
}
