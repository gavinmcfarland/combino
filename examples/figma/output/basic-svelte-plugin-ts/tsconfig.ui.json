{
	"include": ["src/**/*.js", "src/**/*.ts", "src/ui/**/*.ts", "src/ui/**/*.js", "src/ui/**/*.svelte"],
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"moduleDetection": "force"
	}
}
