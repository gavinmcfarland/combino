{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.ui.json",
      "extends": "@tsconfig/svelte/tsconfig.json",
      "include": [
        "src/**/*.svelte",
        "src/**/*.ts",
        "src/**/*.js"
      ],
      "compilerOptions": {
        "composite": true,
        "outDir": "dist/ui"
      }
    },
    {
      "path": "./tsconfig.main.json",
      "compilerOptions": {
        "composite": true,
        "outDir": "dist/main",
        "typeRoots": [
          "node_modules/@figma",
          "node_modules/@types"
        ]
      },
      "include": [
        "src/main/**/*.ts",
        "src/main/**/*.js"
      ]
    }
  ]
}